{
  "manifest_version": 2,
  "name": "Resizing Extension",
  "version": "1.0.0",
  "description": "A plain text description",
  "browser_action": {
    "default_icon": {
      "16": "icon-16.png",
      "24": "icon-24.png",
      "32": "icon-32.png"
    },
    "default_popup": "index.html"
  },
  "permissions": [
    "tabs",
    "storage",
    "system.display"
  ]
}